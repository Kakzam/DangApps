<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <EditText
        android:hint="Judul History"
        android:layout_marginBottom="10dp"
        android:id="@+id/et_title_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="Info History"
        android:layout_marginBottom="10dp"
        android:id="@+id/et_info_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="Info Date"
        android:layout_marginBottom="10dp"
        android:id="@+id/et_date_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/add_menu_history"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_orange_dark"
        android:text="Tambah History"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>