                <RelativeLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/tv_status_detail_place"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:background="@android:color/holo_red_dark"
                        android:text="Open"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_status_detail_place"
                        android:id="@+id/tv_waktu_detail_place"
                        android:layout_toLeftOf="@+id/add_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="21:00"
                        android:textColor="@android:color/white"
                        android:textSize="17sp" />

                    <Button
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/add_menu"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="right"
                        android:text="Add Menu"
                        android:textColor="@android:color/white"
                        android:background="@android:color/holo_green_light"
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nama_detail_place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="@android:color/white"
                        android:maxLines="2"
                        android:text="Bumbu Desa"
                        android:textSize="28sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginTop="2dp"
                            android:id="@+id/image"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_map" />

                        <TextView
                            android:layout_toRightOf="@+id/image"
                            android:layout_toLeftOf="@+id/add_menu"
                            android:id="@+id/tv_alamat_detail_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:maxLines="3"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"
                            android:text="Jl. jalan ke kota Tulungagung"
                            tools:ignore="NotSibling" />

                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

<!-- Fragment -->

